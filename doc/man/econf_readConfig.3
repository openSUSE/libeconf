.nf

#include <libeconf\&.h>
#include <stdio\&.h>

int main(void) {
    econf_file *conf = NULL;
    econf_err err;

    /*
     * Reading
     */
    err = econf_readConfig(&conf,
                           "foo",                 /* project name */
                           "/usr/lib",            /* vendor directory */
                           "example",             /* config name */
                           "conf",                /* suffix */
                           "=",                   /* delimiter */
                           "#");                  /* comment */

    if (err != ECONF_SUCCESS) {
        fprintf(stderr, "Failed to read config: %d\en", err);
        return 1;
    }

    /* Use econf_get\&.\&.\&. functions here to access values */

    econf_free(conf);
    return 0;
}

